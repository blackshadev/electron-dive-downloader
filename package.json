{
  "name": "dive-downloader",
  "description": "Download dives from any divecomputer with an electron app",
  "productName": "dive-downloader",
  "version": "0.2.1",
  "main": ".webpack/main",
  "scripts": {
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --cache --fix --ext .js,.jsx,.ts,.tsx",
    "package": "electron-forge package",
    "start": "electron-forge start",
    "test": "jest",
    "prepare": "husky install",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache"
    ],
    "{*.json,.{eslintrc,prettierrc}}": [
      "prettier --ignore-path .eslintignore --parser json --write"
    ],
    "*.{css,scss}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ],
    "*.{html,md,yml}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blackshadev/electron-dive-downloader.git"
  },
  "author": {
    "name": "Littledev",
    "email": "info@littledev.nl",
    "url": "https://littledev.nl"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blackshadev/electron-dive-downloader/issues"
  },
  "keywords": [],
  "homepage": "https://littledev.nl",
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "release/app/node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/jestModuleMocks/fileMock.js",
      "\\.(css|less|sass|scss)$": "identity-obj-proxy",
      "\\.svg": "<rootDir>/jestModuleMocks/svgMock.js"
    },
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
      "url": "http://localhost/"
    },
    "testPathIgnorePatterns": [
      "out/"
    ],
    "transform": {
      "\\.(ts|tsx|js|jsx)$": "ts-jest"
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.65",
    "@electron-forge/maker-deb": "^6.0.0-beta.65",
    "@electron-forge/maker-dmg": "^6.0.0-beta.65",
    "@electron-forge/maker-rpm": "^6.0.0-beta.65",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.65",
    "@electron-forge/maker-zip": "^6.0.0-beta.65",
    "@electron-forge/plugin-auto-unpack-natives": "^6.0.0-beta.65",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.65",
    "@electron-forge/publisher-github": "^6.0.0-beta.65",
    "@svgr/webpack": "^8.1.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/history": "5.0.0",
    "@types/jest": "^29.5.3",
    "@types/node": "20.5.0",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@types/react-redux": "^7.1.24",
    "@types/redux-saga": "^0.10.5",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "css-loader": "^6.7.1",
    "electron": "^26.0.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "file-loader": "^6.0.0",
    "fork-ts-checker-webpack-plugin": "^8.0.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "lint-staged": "^14.0.0",
    "node-loader": "^2.0.0",
    "node-sass": "^9.0.0",
    "polished": "^4.2.2",
    "prettier": "^3.0.1",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.1",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.7.0",
    "typescript": "^5.1.6",
    "url-loader": "^4.1.0"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.1",
    "electron-debug": "^3.2.0",
    "electron-log": "^4.4.7",
    "electron-squirrel-startup": "^1.0.0",
    "electron-updater": "^6.1.1",
    "history": "^5.3.0",
    "libdivecomputerjs": "^0.7.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-redux": "^8.0.1",
    "react-router-dom": "^6.3.0",
    "redux-saga": "^1.1.3",
    "regenerator-runtime": "^0.14.0",
    "styled-components": "^6.0.7"
  },
  "devEngines": {
    "node": ">=10.x",
    "npm": ">=6.x",
    "yarn": ">=1.21.3"
  },
  "config": {
    "forge": {
      "plugins": [
        {
          "name": "@electron-forge/plugin-auto-unpack-natives",
          "config": {}
        },
        {
          "name": "@electron-forge/plugin-webpack",
          "config": {
            "devContentSecurityPolicy": "default-src 'self' 'unsafe-inline' data:; script-src 'self' 'unsafe-eval' 'unsafe-inline' data:; connect-src 'self' https://api.dive.littledev.nl https://api.littledev.local",
            "mainConfig": "./webpack/webpack.main.config.js",
            "renderer": {
              "nodeIntegration": true,
              "config": "./webpack/webpack.renderer.config.js",
              "entryPoints": [
                {
                  "name": "main_window",
                  "js": "./src/renderer/index.tsx",
                  "html": "./src/renderer/index.ejs"
                }
              ]
            }
          }
        }
      ],
      "packagerConfig": {
        "asar": {
          "unpack": "**/native_modules/**",
          "unpackDir": ".webpack/renderer/native_modules"
        }
      },
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "blackshadev",
              "name": "electron-dive-downloader"
            },
            "draft": true
          }
        }
      ],
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-dmg"
        },
        {
          "name": "@electron-forge/maker-zip"
        },
        {
          "name": "@electron-forge/maker-deb"
        },
        {
          "name": "@electron-forge/maker-rpm"
        }
      ]
    }
  }
}
